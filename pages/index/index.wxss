.search{
  height: 80rpx;
  width: 100%;
  background-color: #b66c3b;
  overflow: hidden;
}
.searchmain{
  height: 60rpx; 
  overflow: hidden;
  background-color: #ffffff;
  margin: 15rpx 25rpx;
  border-radius: 50rpx;
}
.searchicon{
  margin-right: 4rpx;
  margin-top:8rpx;
  float: left;
  margin-left: 250rpx;
}
.searchtext{
  margin-top: 14rpx;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  float: left;
  font-size: 26rpx;
  color:#4b4848;
}
.goods-classify{
  width: 100%;
  height: 310rpx;
  background-color: #ffffff;
}
.classify-list{
  width: 150rpx;
  height: 150rpx;
  float: left;
  text-align: center;
}
.classify-list image{
  width: 65rpx;
  height: 65rpx;
  margin: 35rpx 20rpx 10rpx 20rpx;
}
.classify-text{
  font-size: 25rpx;
}


.item {
  display: flex;
}

.thumbnail {
  width: 320rpx;
  height: 240rpx;
}

.info {
  flex: 1 1;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.info {
  position: relative;
}

.info image {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}