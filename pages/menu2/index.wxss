page{
    display:flex;
    flex-direction: column;
    height: 100%;
}
.navbar{
    flex:none;
    display: flex;
    background: #fff;
}
.navbar .item{
    position: relative;
    flex:auto;
    text-align: center;
    line-height: 80rpx;
    font-size: 14px;
}
.navbar .item.active{
    color: #e1007e;
}
.navbar .item.active:after{
    content: "";
    display:block;
    position: absolute;
    bottom:0;
    left:0;
    right: 0;
    height:5rpx;
    background:#e1007e;
    width:70%;
    margin:0px auto;
}
